<UserControl x:Class="TheNewEra.FuelGauge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="5" d:DesignWidth="100">
    <Canvas Name="RootCanvas">
        <Rectangle Height="5" Fill="Red" Width="{Binding Rocket.FuelTank.ScaleFactor}"/>
        <Rectangle Height="5" Fill="Green" Width="{Binding Rocket.FuelTank.RemainingFuelScaled}"/>
    </Canvas>
</UserControl>
